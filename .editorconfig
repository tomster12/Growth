# Dotnet code style settings:
[*.{cs,vb}]

# Disable shorten new() syntax suggestion
dotnet_diagnostic.IDE0090.severity = none

# Disable Read-only warning
dotnet_diagnostic.IDE0044.severity = none
dotnet_diagnostic.IDE0251.severity = none

# Disable unused private members warning
dotnet_diagnostic.IDE0051.severity = none

# General naming rules
dotnet_style.braces_for_single_line_statements = true:suggestion
insert_final_newline = true
